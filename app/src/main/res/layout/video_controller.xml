<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_v"
    android:gravity="center_horizontal|center_vertical">

    <LinearLayout
        android:id="@+id/controls1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/controls_1_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/previous"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            app:srcCompat="@drawable/baseline_skip_previous_24" />

        <ImageView
            android:id="@+id/replay"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            app:srcCompat="@drawable/baseline_replay_5_24" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:padding="8dp"
            app:srcCompat="@drawable/baseline_play_arrow_24" />

        <ImageView
            android:id="@+id/forward"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            app:srcCompat="@drawable/baseline_forward_5_24" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            app:srcCompat="@drawable/baseline_skip_next_24" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/controls2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:id="@+id/bottomMainControls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="8dp"
                    android:text="0:00" />

                <ImageView
                    android:id="@+id/openInYoutube"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    app:srcCompat="@drawable/baseline_start_24" />

                <ImageView
                    android:id="@+id/speed"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    app:srcCompat="@drawable/baseline_speed_24" />

                <ImageView
                    android:id="@+id/fullscreen"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    app:srcCompat="@drawable/baseline_fullscreen_24" />

                <TextView
                    android:id="@+id/length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="8dp"
                    android:text="0:00" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:paddingStart="16dp"
                android:paddingTop="0dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/speedControls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/speedBack"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    app:srcCompat="@drawable/baseline_arrow_back_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="8dp"
                    android:text="HÄ±z:" />

                <TextView
                    android:id="@+id/speedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0x"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/speedBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:indeterminate="false"
                android:max="4"
                android:paddingStart="16dp"
                android:paddingTop="0dp"
                android:paddingEnd="16dp"
                android:paddingBottom="0dp"
                android:progress="2" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>